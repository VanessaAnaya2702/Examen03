<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="#4A3288"
            android:text="Cien aÃ±os de Soledad"/>

        <TextView
            android:id="@+id/textAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="italic"
            android:textColor="#663ECE"
            android:text="Autor: Grabriel Garcia Marquez"/>

        <TextView
            android:id="@+id/textCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="italic"
            android:textColor="#663ECE"
            android:text="Categoria: Literatura y Ficcion"/>

        <TextView
            android:id="@+id/textEditorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:maxLines="1"
            android:textStyle="bold"
            android:textColor="#89888A"
            android:text="Editorial: Planeta"/>

        <TextView
            android:id="@+id/textDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="5"
            android:ellipsize="end"
            android:text="Novela clave de dos aspectos en el que implica su exitosa aparicion Novela clave de dos aspectos en el que implica su exitosa aparicion Novela clave de dos aspectos en el que implica su exitosa aparicion"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>